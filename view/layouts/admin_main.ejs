start(store('chimera-view-setting').mainblock) %>
	<% implement('admin/header') %>
	<div id="wrapper">
		<div id="sidebar-wrapper">
			<div id="sidebar-wrapper-inner" >
				<div id="nano-container" class="nano">
					<div class="nano-content">
						<% sb.menu('chimera-sidebar', {admin:true}) %>
					</div>
				</div>
			</div>
		</div>

		<div id="page-wrapper">
			<div class="container">
				<% assign('chimera-page-title') %>
				<div id="error"></div>
				<% assign(store('chimera-view-setting').contentblock) %>
			</div>
		</div>
	</div>
<% end(store('chimera-view-setting').mainblock) %>
