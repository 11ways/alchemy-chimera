<% start('wrapper') %>
<div class="form-group">
	<label for="<%= item.id %>" class="col-sm-2 control-label"><%= item.title %></label>
	<div class="col-sm-10 controls">
		<!--INPUT-->
		<!--HELP-->
	</div>
</div>
<% end('wrapper') %>

<% start('input') %>
<select name="<%= item.fullPath %>" class=" form-control" id="AdminField-<%= item.name %>" <% if(item.readonly===true){ %> readonly <% } %>>
	<option value="">-- <%= item.title %> --</option>
	<%
		var i, option, html = '';

		for (i = 0; i < item.value.options.length; i++) {
			option = item.value.options[i];

			html += '<option value="' + option.id + '" ';

			if (''+option.id == ''+item.value.value) {
				html += 'selected ';
			}

			html += '>' + __r(option.title) + '</option>';
		}

		echo(html);
	%>
</select>
<% end('input') %>