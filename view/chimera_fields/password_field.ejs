<% start('wrapper') %>
<div class="form-group">
	<label for="<%= item.id %>" class="col-sm-2 control-label"><%= item.title %></label>
	<div class="col-sm-10 controls">
		<!--INPUT-->
	</div>
</div>
<% end('wrapper') %>

<% start('input') %>
<input name="<%= item.fullPath %>" class="form-control" value="" id="<%= item.id %>-first" type="password" placeholder="<%= __('chimera', 'Enter a new password') %>" <% if(item.readonly===true){ %> readonly <% } %>><br/>
<input name="<%= item.fullPath %>" class="form-control" value="" id="<%= item.id %>-second" type="password" placeholder="<%= __('chimera', 'Repeat the same password') %>" <% if(item.readonly===true){ %> readonly <% } %>>
<% end('input') %>