<% expands('layouts/admin_main') %>

<% start(store('chimera-view-setting').contentblock) %>
<div class="adminActionHead">
  <span class="title" id="mainTitle"><%= modelName %>: Add record</span>
  <div class="clear"></div>
</div>

<div class="error"></div>

<% form.create(modelName, {prefix: '/admin'}) %>
	<table class="table table-striped table-bordered">
		<% for (var field in blueprint) { %>
		
		<tr>
			<td><%= field %></td>
			<td><% form.blueprintField(field, {blueprint: blueprint[field]}) %></td>
		</tr>
		<% } %>
	</table>
<% form.end('save') %>

<button class="btn btn-primary" id="saveAdd" data-model="<%= modelName %>">Old Add record</button>

