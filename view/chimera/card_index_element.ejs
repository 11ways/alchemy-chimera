<%
var key;

if (item && item[modelName]) {
	item = item[modelName];
}
%>

<div class="col-md-<%= cardGrid %>">
	<article class="pcard">
		<header class="no-border">
			<h1><%= item.title || item.name || item._id %></h1>
			<div class="tools">
				<%
					chimera.actions('record', {
						'class': 'btn btn-xs',
						routeVars: {
							id: item._id
						},
						content: false
					});
				%>
			</div>
		</header>
		<div class="body no-border">
			<div class="row-fluid">
				<div>
				<% for (key in item) { %>
					<% echo(key + ': ' + item[key]) %><br>
				<% } %>
				</div>
			</div>
		</div>
	</article>
</div>