<%
value = data.value;

if (data.value && typeof data.value.format == 'function') {
	value = data.value.format('Y-m-d\\TH:i:s');

	ms = data.value.getMilliseconds();

	if (ms) {
		value += '.' + ms;
	}
}
%>

<input
	type="datetime-local"
	class="chimeraField-prime"
	name="data.<%= data.field.path %>"
	value="<%= value || '' %>"
>