<%
script('chimera/taildatetime');
style('tail/datetime-default');

value = data.value;

if (data.value && typeof data.value.format == 'function') {
	value = data.value.format('Y-m-d');
}
%>
<input
	type="text"
	class="chimeraField-prime form-control"
	name="data.<%= data.field.path %>"
	value="<%= value || '' %>"
	id="field-<%= data.field.path %>"
	placeholder="yyyy-mm-dd"
>