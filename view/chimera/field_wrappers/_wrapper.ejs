<%

// Render the wrapper
implement('chimera/field_wrappers/' + template.wrapper + '_' + template.action, {changeMain: true, wrapper: false});

// See if it's an arrayable field
if (data.field.fieldType.isArray) {

	value = Array.cast(data.value);

	for (i = 0; i < value.length; i++) {
		newData = {data: Object.assign({}, data, {value: value[i]})};
		implement('chimera/fields/' + template.field + '_' + template.action, null, newData);
	}
} else {
	implement('chimera/fields/' + template.field + '_' + template.action);
}

%>